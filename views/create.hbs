<!--  ./views/index.handlebars -->
<div class="container py-5">

  <div class="row">
    <div class="col-12 mx-auto">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">請輸入你的推薦餐廳</h2>
          <hr>
          <form method="POST" action="/">
            <div class="form-group form-row">
              <label for="name" class="col-md-3 col-form-label">
                餐通名稱(中文) *
              </label>
              <div class="col-md-9">
                <input type="text" name="name" class="form-control" id="name" required autofocus
                  value="{{restaurant.name}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="name_en" class="col-md-3 col-form-label">
                餐通名稱(英文)
              </label>
              <div class="col-md-9">
                <input type="text" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-3 col-form-label">
                分類類別 *
              </label>
              <div class="col-md-9">
                <input type="text" name="category" class="form-control" id="category" required
                  value="{{restaurant.category}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-3 col-form-label">
                餐廳照片
              </label>
              <div class="col-md-9">
                <input type="url" name="image" class="form-control" id="image" value="{{restaurant.image}}">
                <small class="text-muted form-text">請附上照片連結網址</small>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-3 col-form-label">
                餐廳地址 *
              </label>
              <div class="col-md-9">
                <input type="text" name="location" class="form-control" id="location" required
                  value="{{restaurant.location}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="phone" class="col-md-3 col-form-label">
                餐廳電話
              </label>
              <div class="col-md-9">
                <input type="tel" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="google_map" class="col-md-3 col-form-label">
                Google Map
              </label>
              <div class="col-md-9">
                <input type="url" name="google_map" class="form-control" id="google_map"
                  value="{{restaurant.google_map}}">
                <small class="text-muted form-text">請附上 google map 的連結網址</small>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-3 col-form-label">
                評價分數 *
              </label>
              <div class="col-md-4">
                <input type="range" name="rating" class="form-control" id="rating" min="1" max="5" step="0.1"
                  oninput="this.form.rating_show.value=this.value" required value="{{restaurant.rating}}">
              </div>
              <div class="col-md-1"></div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="rating_show" disabled value="3.0">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-3 col-form-label">
                描述
              </label>
              <div class="col-md-9">
                <input type="text" name="description" class="form-control" id="description"
                  value="{{restaurant.description}}">
                <small class="text-muted form-text">非必填，但好的描述可以讓更多人了解餐廳唷！</small>
              </div>
            </div>

            <div class="text-right">
              <button class="btn btn-success" type="submit">Create</button>

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>